package primeiro.progeto;

public class Sinais1 {

	public static void main(String[] args) {

		int n1 = 15;
		int n2 = 10;
		boolean pergunta = true;
		
		if (pergunta) {
			System.out.println("A resposta e verdadeira");
		}
		
		if (!pergunta) {
			System.out.println("A resposta e falsa");
		}
		
		if (n1 > n2) {
			System.out.println("N1 é maior que N2");
		}

		if (n1 < n2) {
			System.out.println("N1 é menor que N2");
		}

		if (n1 == n2) {
			System.out.println("N1 e N2 são iguais");
		}

		if (n1 != n2) {
			System.out.println("N1 e N2 não são diferentes");
		}
	}

}
