package primeiro.progeto;

public class SwitchCase {

	public static void main(String[] args) {

		int opcao1 = 1;
		
		switch (opcao1) {
		case 1:
			System.out.println("Voce escolher a opção 1 ");
			break;

		}
		switch (opcao1) {
		case 2:
			System.out.println("Voce escolher a opção 3 ");
			break;

		}
		switch (opcao1) {
		case 2:
			System.out.println("Voce escolher a opção 3 ");
			break;
			default:
				
				System.out.println("Opção invalida");

		}
		
	}

}
